<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.google.sitebricks</groupId>
  <artifactId>sitebricks-parent</artifactId>
  <packaging>pom</packaging>
  <version>0.7</version>

  <scm>
    <connection>scm:svn:http://google-sitebricks.googlecode.com/svn/trunk/</connection>
    <developerConnection>scm:svn:https://google-sitebricks.googlecode.com/svn/trunk/</developerConnection>
    <url>http://code.google.com/p/google-sitebricks/source/browse/</url>
  </scm>

  <modules>
    <module>sitebricks</module>
    <module>acceptance-test</module>
    <module>sitebricks-web</module>
    <module>sitebricks-tutorial</module>
  </modules>
  <name>sitebricks-parent</name>
  <url>http://maven.apache.org</url>
  <dependencies>
    <dependency>
      <groupId>org.testng</groupId>
      <artifactId>testng</artifactId>
      <version>5.8</version>
      <classifier>jdk15</classifier>
      <scope>test</scope>
    </dependency>
  </dependencies>
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>
          <source>1.5</source>
          <target>1.5</target>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-release-plugin</artifactId>
        <version>2.0-beta-7</version>
        <configuration>
          <tagBase>scm:svn:http://google-sitebricks.googlecode.com/svn/tags</tagBase>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <distributionManagement>
    <repository>
      <id>google-sitebricks-releases</id>
      <name>Google Sitebricks Repository</name>
      <url>http://oss.sonatype.org/content/groups/google-with-staging/</url>
    </repository>
    <snapshotRepository>
      <id>google-sitebricks-snapshots</id>
      <name>Google Sitebricks Snapshots Repository</name>
      <url>http://oss.sonatype.org/content/repositories/google-snapshots/</url>
      <uniqueVersion>false</uniqueVersion>
    </snapshotRepository>
  </distributionManagement>
  <profiles>
    <profile>
      <id>release-sign-artifacts</id>
      <activation>
        <property>
          <name>performRelease</name>
          <value>true</value>
        </property>
      </activation>
      <build>
        <plugins>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-gpg-plugin</artifactId>
            <version>1.0-alpha-4</version>
            <executions>
              <execution>
                <id>sign-artifacts</id>
                <phase>verify</phase>
                <goals>
                  <goal>sign</goal>
                </goals>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
</project>
